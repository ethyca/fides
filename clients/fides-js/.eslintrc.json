{
  "extends": [
    "airbnb",
    "airbnb-typescript/base",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "curly": ["error", "all"],
    "nonblock-statement-body-position": ["error", "below"],
    "import/prefer-default-export": "off",
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsForRegex": ["^draft"]
      }
    ]
  }
}
