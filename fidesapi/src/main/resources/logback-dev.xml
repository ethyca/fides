<configuration status="warn">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%p [%d{dd-MMM-yy HH:mm:ss}] %c : %m%n</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/logs/fides.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover -->
      <fileNamePattern>fides.%d{yyyy-MM-dd}.log</fileNamePattern>

      <!-- keep 30 days' worth of history capped at 3GB total size -->
      <maxHistory>30</maxHistory>
      <totalSizeCap>3GB</totalSizeCap>

    </rollingPolicy>

    <encoder>
      <pattern>%p [%d{dd-MMM-yy HH:mm:ss}] %c : %m%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="FILE" />
  </root>
  <logger name="devtools.util" level="DEBUG" />
  <logger name="devtools.util.ConfigLoader" level="INFO" />
  <logger name="slick.jdbc" level="INFO" />
  <logger name="org.eclipse.jetty" level="WARN" />
  <logger name="com.mchange.v2.c3p0" level="WARN" />
</configuration>
